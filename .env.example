# ===========================================
# Supabase PostgreSQL Connection
# ===========================================
# Get this from: Supabase Dashboard > Project Settings > Database > Connection string
# Use "Transaction" mode connection string for serverless
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations (use in local dev or CI/CD)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# ===========================================
# Rakuten API Keys
# ===========================================
# Get from: https://webservice.rakuten.co.jp/
RAKUTEN_APP_ID="your-rakuten-app-id"
RAKUTEN_AFFILIATE_ID="your-affiliate-id"

# ===========================================
# Authentication (NextAuth)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl"
# Your production URL (e.g., https://your-app.vercel.app)
NEXTAUTH_URL="https://your-app.vercel.app"

# ===========================================
# Cron Job Security
# ===========================================
# Secret key for triggering ingest jobs
CRON_SECRET="your-cron-secret-key"

# ===========================================
# SMTP Configuration (Optional - for password reset)
# ===========================================
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@example.com"
